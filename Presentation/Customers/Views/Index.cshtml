@using CleanArchitecture.Application.Customers.Queries.GetCustomerList
@model IEnumerable<CustomerModel>

@{
    ViewBag.Title = "Customers";
}

<h2>Customers</h2>

<table class="table table-striped">
    <thead>
    <tr>
        <th>ID</th>
        <th>Name</th>
    </tr>
    </thead>

    <tbody>
    @foreach (CustomerModel customer in Model)
    {
        <tr>
            <td>@customer.Id</td>
            <td>@customer.Name</td>
        </tr>
    }
    </tbody>
</table>
